@using Webdiyer.WebControls.Mvc
@model PagedList<CertCenter.Models.DbModels.certcenterlog>


<table>
    <tr>
        <th>序号</th>
        <th>url</th>
        <th>请求时间</th>
        <th>ip</th>
        <th>用户id</th>
        <th>用户名</th>
        <th>请求数据</th>
        <th>操作内容</th>
        <th>操作</th>
    </tr>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.id</td>
            <td><div style="width:200px; word-wrap: break-word;">@a.url</div></td>
            <td>@a.reqtime</td>
            <td>@a.ip</td>
            <td>@a.userid</td>
            <td>@a.username</td>
            <td><a href="javascript:void(0);" onclick="showdetail(this);">显示请求数据</a><div style="display: none; max-width:150px;max-height:200px;word-wrap: break-word; overflow-y:auto; ">@a.reqdata</div> </td>
            <td>@a.opecontent</td>
            <td><a href="javascript:void(0);" onclick="deletelog(this)" data-item="@a.id">删除</a></td>
        </tr>
    }
</table>

<div class="list_page">
    <div class="fl total">共<em>@Model.TotalPageCount</em>页<em>@Model.TotalItemCount</em>条记录，当前为第<em>@Model.CurrentPageIndex</em>页</div>
    @Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "pno", ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.TextBox, ShowGoButton = true }, new MvcAjaxOptions { UpdateTargetId = "listcon", HttpMethod = "Post", DataFormId = "searchForm" }, new { @class = "pager_page" })
</div>
